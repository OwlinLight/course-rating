<p style="color: green"><%= notice %></p>

<h1><%= @group.name %></h1>
<h2>Users</h2>
<ul>
  <% @users.each do |user| %>
    <li><%= user.name %></li>
  <% end %>
</ul>

<% if current_user %>
  <%= link_to "Join Group", add_user_group_path(@group, user_id: current_user.id) %>
<% end %>

<div>
  <%= link_to "Edit this group", edit_group_path(@group) %> |
  <%= link_to "Back to groups", groups_path %>

  <%= button_to "Destroy this group", @group, method: :delete %>
</div>
