<h1>Sign up</h1>

<%= form_with model: @user do |f| %>
  <%= f.label :email %><br>
  <%= f.text_field :email %><br>
  <br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <br>
  <%= f.label :character %><br>
  <%= f.select :character, options_for_select([['student'], ['teacher']]) %><br>
  <br>
  <%= f.submit %> <%= link_to "Want to sign in?", login_path%>
<% end %>

<% if flash[:danger] && flash[:danger].present? %>
  <div style="color: red"><%= flash[:danger] %></div>
<% end %>