<h1>Welcome, Student</h1>

<h2>Classes:</h2>
<ul>
  <%# Use 'klass' as class is reserved%>
  <%# current_user.classes.each do |klass| %>
    <li>
      <%# link_to klass.name, klass %>
    </li>
  <%# end %>
<% surveys = current_user.surveys %>
  <p>survey records: </p>
  <%= surveys.length == 0 ? "No survey records" : "You got #{surveys.length} surveys" %>
  <%= link_to "New survey", new_survey_path %>
  <% surveys.each do |survey|%>
    <p> rating: <%= survey.rating%></p>
    <p> comment:<%= link_to survey.comment, survey%></p>
  <% end %>

  <%#= link_to current_user.surveys, current_user.group %>

</ul>