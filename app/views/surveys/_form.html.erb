    <%= form.label :comment, style: "display: block" %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.label :student_id, style: "display: block" %>
    <%= form.collection_select :student_id, User.all, :id, :name, {:selected => current_user.id}%>
  </div>

  <div>
    <%= form.label :presentation_id, style: "display: block" %>
    <%#= form.number_field :presentation_id %>
